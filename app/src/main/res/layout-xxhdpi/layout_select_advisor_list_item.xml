<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lr_select_advisor_parent"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="-10dp"
        android:background="@drawable/selected_advisor_user_cadr">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/navigation_margin_25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_select_tick"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/select_advisor_white_black" />

            <FontComponents.TextViewFont
                android:id="@+id/txt_user_comments_list_item_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="34534"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/intro_text_view_size_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/navigation_margin_2"
            android:layout_gravity="center"
            android:orientation="vertical">

            <FontComponents.TextViewFont
                android:id="@+id/txt_user_comments_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="محمدرضا عارف"
                app:customFont="@string/font_default"
                android:layout_marginBottom="@dimen/navigation_margin_5"
                android:textColor="@color/black"
                android:textSize="@dimen/fragment_first_page_text_size_1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/navigation_margin_5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_user_comment_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/dot"
                    android:layout_marginRight="@dimen/navigation_margin_5"/>

                <ImageView
                    android:id="@+id/img_user_comment_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/dot"
                    android:layout_marginRight="@dimen/navigation_margin_5"/>

                <ImageView
                    android:id="@+id/img_user_comment_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/dot"
                    android:layout_marginRight="@dimen/navigation_margin_5"/>

                <ImageView
                    android:id="@+id/img_user_comment_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/dot"
                    android:layout_marginRight="@dimen/navigation_margin_5"/>

                <ImageView
                    android:id="@+id/img_user_comment_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/dot"/>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/navigation_margin_25"
            android:layout_gravity="right|center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user_comment_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:src="@drawable/profile_moshaver_test"
                app:civ_border_width="2dp"
                android:layout_marginLeft="@dimen/navigation_margin_15"
                app:civ_border_color="@color/black"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>