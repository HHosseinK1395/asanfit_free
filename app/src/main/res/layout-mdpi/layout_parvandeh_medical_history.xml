<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/navigation_margin_20">

        <FontComponents.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تاریخچه پزشکی"
            app:customFont="@string/font_default"
            android:textColor="@color/mycolor_yellow"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_gravity="right"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/round_indicator"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/navigation_margin_5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/navigation_margin_10"
        android:gravity="right">

        <FontComponents.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fragment_first_page_text_size_2"
            app:customFont="@string/font_default"
            android:textColor="@color/black"
            android:text="آیا به بیماری خاصی مبتلا هستید"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_parvandeh_medical_history_special_sickness"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:backgroundTint="@color/edittext_disable_color"
                android:textAlignment="textEnd"
                android:textDirection="rtl"
                android:tooltipText="روز"
                android:background="@drawable/shape_edittext"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_down"
                android:layout_gravity="center_vertical"
                android:layoutDirection="rtl"
                android:layout_marginLeft="@dimen/navigation_margin_10"
                android:tint="@color/gray_dark"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/navigation_margin_20"
        android:gravity="right">

        <FontComponents.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fragment_first_page_text_size_2"
            app:customFont="@string/font_default"
            android:textColor="@color/black"
            android:text="آیا دارو یا مکمل خاصی مصرف میکنید"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_parvandeh_medical_history_medicine"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textAlignment="textEnd"
                android:textDirection="rtl"
                android:backgroundTint="@color/edittext_disable_color"
                android:tooltipText="روز"
                android:background="@drawable/shape_edittext"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_down"
                android:layout_gravity="center_vertical"
                android:layoutDirection="rtl"
                android:layout_marginLeft="@dimen/navigation_margin_10"
                android:tint="@color/gray_dark"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/navigation_margin_20"
        android:gravity="right">

        <FontComponents.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fragment_first_page_text_size_2"
            app:customFont="@string/font_default"
            android:textColor="@color/black"
            android:text="آیا اخیرا سابقه عمل جراحی داشته اید"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_parvandeh_medical_history_surgery"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textAlignment="textEnd"
                android:textDirection="rtl"
                android:backgroundTint="@color/edittext_disable_color"
                android:tooltipText="روز"
                android:background="@drawable/shape_edittext"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_down"
                android:layout_gravity="center_vertical"
                android:layoutDirection="rtl"
                android:layout_marginLeft="@dimen/navigation_margin_10"
                android:tint="@color/gray_dark"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/navigation_margin_20"
        android:gravity="right">

        <FontComponents.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fragment_first_page_text_size_2"
            app:customFont="@string/font_default"
            android:textColor="@color/black"
            android:text="آیا در پارامترهای آزمایشگاهی زیر دارای مشکل هستید"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_parvandeh_medical_history_laboratory_problem"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textAlignment="textEnd"
                android:textDirection="rtl"
                android:backgroundTint="@color/edittext_disable_color"
                android:tooltipText="روز"
                android:background="@drawable/shape_edittext"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_down"
                android:layout_gravity="center_vertical"
                android:layoutDirection="rtl"
                android:layout_marginLeft="@dimen/navigation_margin_10"
                android:tint="@color/gray_dark"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/navigation_margin_20"
        android:gravity="right">

        <FontComponents.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fragment_first_page_text_size_2"
            app:customFont="@string/font_default"
            android:textColor="@color/black"
            android:text="آیا شرایط فیزیولوژیکی خاصی دارید نظیر بارداری یا شیردهی"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_parvandeh_medical_history_physiologic"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textAlignment="textEnd"
                android:textDirection="rtl"
                android:backgroundTint="@color/edittext_disable_color"
                android:tooltipText="روز"
                android:background="@drawable/shape_edittext"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                android:layout_gravity="center_vertical"
                android:layoutDirection="rtl"
                android:layout_marginLeft="@dimen/navigation_margin_10"
                android:tint="@color/gray_dark"/>

        </FrameLayout>

    </LinearLayout>


</LinearLayout>