<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/background_toolbar"
    android:fitsSystemWindows="true"
    android:id="@+id/main_toolbar"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    app:theme="@style/ThemeOverlay.AppCompat.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/navigation_margin_60"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_toolbar_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back"/>

        <ImageView
            android:id="@+id/img_toolbar_logo"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/register_logo_white"/>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_toolbar_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/navigation_margin_10"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu"/>

            <ImageView
                android:id="@+id/item_string_message_count"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:customFont="@string/font_default"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:tint="@color/red"
                android:layout_marginRight="@dimen/navigation_margin_15"
                android:backgroundTint="@color/red"
                android:background="@drawable/dot"
                android:layout_marginBottom="2dp"
                android:gravity="right"/>

        </FrameLayout>


    </LinearLayout>

</android.support.v7.widget.Toolbar>