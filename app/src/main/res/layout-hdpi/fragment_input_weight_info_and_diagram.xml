<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_gray">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_with_shadow"
                android:layout_marginLeft="@dimen/navigation_margin_10"
                android:layout_marginRight="@dimen/navigation_margin_10"
                android:layout_marginTop="@dimen/navigation_margin_10"
                android:layout_marginBottom="@dimen/navigation_margin_30"
                android:padding="@dimen/navigation_margin_15"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FontComponents.TextViewFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="وزن ( کیلوگرم )"
                        app:customFont="@string/font_default"
                        android:textColor="@color/black"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:textSize="8sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/round_indicator"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </LinearLayout>


                    <!--<FontComponents.TextViewFont-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="وزن ( کیلوگرم )"-->
                        <!--app:customFont="@string/font_default"-->
                        <!--android:textColor="@color/black"-->
                        <!--android:layout_gravity="right"-->
                        <!--android:gravity="right"-->
                        <!--android:textSize="8sp"/>-->

                    <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center|right"-->
                        <!--android:foregroundGravity="center|right"-->
                        <!--android:tint="@color/weight_color_green"-->
                        <!--android:layout_marginLeft="2dp"-->
                        <!--android:src="@drawable/round_indicator"/>-->

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical">

                    <com.jjoe64.graphview.GraphView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/graph" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:weightSum="8">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <FontComponents.TextViewFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="شنبه"
                            app:customFont="@string/font_default"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10sp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_saturday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8/"
                                app:customFont="@string/font_default"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="11sp"/>

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_saturday1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22"
                                app:customFont="@string/font_default"
                                android:textColor="#000000"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">

                        <FontComponents.TextViewFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="یکشنبه"
                            app:customFont="@string/font_default"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10sp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_sunday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8/"
                                app:customFont="@string/font_default"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="11sp"/>

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_sunday1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="23"
                                app:customFont="@string/font_default"
                                android:textColor="#000000"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">

                        <FontComponents.TextViewFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="دوشنبه"
                            app:customFont="@string/font_default"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10sp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_monday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8/"
                                app:customFont="@string/font_default"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="11sp"/>

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_monday1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24"
                                app:customFont="@string/font_default"
                                android:textColor="#000000"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">

                        <FontComponents.TextViewFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="سه شنبه"
                            app:customFont="@string/font_default"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10sp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_tuesday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8/"
                                app:customFont="@string/font_default"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="11sp"/>

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_tuesday1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                app:customFont="@string/font_default"
                                android:textColor="#000000"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">

                        <FontComponents.TextViewFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="چهارشنبه"
                            app:customFont="@string/font_default"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10sp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_wednesday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8/"
                                app:customFont="@string/font_default"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="11sp"/>

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_wednesday1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="26"
                                app:customFont="@string/font_default"
                                android:textColor="#000000"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">

                        <FontComponents.TextViewFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="پنجشنبه"
                            app:customFont="@string/font_default"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10sp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_thursday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8/"
                                app:customFont="@string/font_default"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="11sp"/>

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_thursday1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="27"
                                app:customFont="@string/font_default"
                                android:textColor="#000000"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">

                        <FontComponents.TextViewFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="جمعه"
                            app:customFont="@string/font_default"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10sp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_friday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8/"
                                app:customFont="@string/font_default"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="11sp"/>

                            <FontComponents.TextViewFont
                                android:id="@+id/txt_weight_info_friday1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28"
                                app:customFont="@string/font_default"
                                android:textColor="#000000"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



                <FontComponents.TextViewFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ورود اطلاعات"
                    android:layout_marginTop="@dimen/navigation_margin_10"
                    app:customFont="@string/font_default"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fragment_first_page_text_size_1"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/divider_underline_color" />

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="4dp"
                        android:layout_gravity="right"
                        android:background="@drawable/orange_divider">
                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/navigation_margin_20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation  ="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <FontComponents.TextViewFont
                            android:id="@+id/txt_weight_left"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text="کیلوگرم"
                            android:gravity="right"
                            android:textColor="@color/user_info_text_color_6"
                            android:textSize="@dimen/fragment_first_page_text_size_0"
                            app:customFont="@string/font_default"/>

                        <FontComponents.MyEditText
                            android:id="@+id/edt_user_info_weight"
                            android:layout_width="180dp"
                            android:layout_height="38dp"
                            android:layoutDirection="rtl"
                            android:inputType="number"
                            android:gravity="center"
                            android:maxLength="@integer/activity_user_info_text_length"
                            android:textSize="@dimen/fragment_first_page_text_size_1"
                            android:layout_marginRight="@dimen/navigation_margin_10"
                            android:layout_marginLeft="@dimen/navigation_margin_10"
                            android:textColorHint="@color/user_info_text_color_4"
                            android:layout_gravity="center"
                            android:animateLayoutChanges="true"
                            android:background="@drawable/shape_edittext"/>

                        <FontComponents.TextViewFont
                            android:id="@+id/txt_weight_right"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text="وزن"
                            android:textColor="@color/user_info_text_color_6"
                            android:gravity="left"
                            android:textSize="@dimen/fragment_first_page_text_size_0"
                            app:customFont="@string/font_default"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation ="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/navigation_margin_10">

                        <FontComponents.TextViewFont
                            android:id="@+id/txt_height_left"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text="سانتی متر"
                            android:gravity="right"
                            android:textSize="@dimen/fragment_first_page_text_size_0"
                            android:textColor="@color/user_info_text_color_6"
                            app:customFont="@string/font_default"/>

                        <FontComponents.MyEditText
                            android:id="@+id/edt_user_info_height"
                            android:layout_width="180dp"
                            android:layout_height="38dp"
                            android:layoutDirection="rtl"
                            android:inputType="number"
                            android:gravity="center"
                            android:animateLayoutChanges="true"
                            android:maxLength="@integer/activity_user_info_text_length"
                            android:textSize="@dimen/fragment_first_page_text_size_1"
                            android:textColorHint="@color/user_info_text_color_4"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/navigation_margin_10"
                            android:layout_marginRight="@dimen/navigation_margin_10"
                            android:background="@drawable/shape_edittext"/>

                        <FontComponents.TextViewFont
                            android:id="@+id/txt_height_right"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text="دور کمر"
                            android:gravity="left"
                            android:textColor="@color/user_info_text_color_6"
                            android:textSize="@dimen/fragment_first_page_text_size_0"
                            app:customFont="@string/font_default"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <FontComponents.MyButton
                android:id="@+id/btn_weight_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_2"
                android:text="ثبت اطلاعات"
                android:textStyle="bold"
                android:layout_gravity="center|bottom"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/fragment_first_page_text_size_2"/>

        </FrameLayout>

    </ScrollView>

</LinearLayout>