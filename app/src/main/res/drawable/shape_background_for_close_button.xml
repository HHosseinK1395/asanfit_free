<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <solid android:color="#FFFDE5CC" />
            <corners android:topLeftRadius="9dp"
                android:bottomRightRadius="9dp"/>

        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="7px"
        android:top="7px"
        android:right="7px"
        android:left="7px">

        <shape  android:shape="rectangle">

            <solid android:color="#FFFDE5CC" />
            <corners android:bottomLeftRadius="7dp" />


        </shape>

    </item>


</layer-list>