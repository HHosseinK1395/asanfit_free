<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginLeft="@dimen/navigation_margin_10"
       android:layout_marginRight="@dimen/navigation_margin_10"
       android:layout_marginTop="@dimen/navigation_margin_10"
        android:paddingBottom="@dimen/navigation_margin_15">

        <FontComponents.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/navigation_margin_10"
            android:textSize="@dimen/fragment_first_page_text_size_3"
            app:customFont="@string/font_default"
            android:layout_marginBottom="@dimen/navigation_margin_5"
            android:textColor="@color/black"
            android:text="رژیم شما "/>

        <FontComponents.MyEditText
            android:id="@+id/edt_parvandeh_regim_dialog"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:hint="رژیم مورد نظر شما"
            android:textColorHint="@color/mini_light_gray"
            android:layout_marginLeft="@dimen/navigation_margin_15"
            android:layout_marginRight="@dimen/navigation_margin_15"
            android:paddingRight="@dimen/navigation_margin_10"
            android:paddingLeft="@dimen/navigation_margin_10"
            android:background="@drawable/shape_edittext"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/navigation_margin_10"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <FontComponents.MyButton
                android:id="@+id/btn_parvandeh_regim_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/shape_button_2"
                android:text="انصراف"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/fragment_first_page_text_size_4"
                android:paddingLeft="@dimen/fragment_first_page_padding_3"
                android:paddingRight="@dimen/fragment_first_page_padding_3"
                android:backgroundTint="@color/mycolor_yellow"/>

            <FontComponents.MyButton
                android:id="@+id/btn_parvandeh_regim_dialog_ok"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/shape_button_2"
                android:text="تایید"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/navigation_margin_10"
                android:layout_marginRight="@dimen/navigation_margin_15"
                android:textSize="@dimen/fragment_first_page_text_size_4"
                android:paddingLeft="@dimen/fragment_first_page_padding_4"
                android:paddingRight="@dimen/fragment_first_page_padding_4"
                android:backgroundTint="@color/mycolor_yellow"/>

        </LinearLayout>

   </LinearLayout>

</LinearLayout>