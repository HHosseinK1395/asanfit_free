                <LinearLayout
                    android:id="@+id/lnr_close_message_parent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fragment_first_page_message_box_height"
                    android:layout_marginBottom="@dimen/navigation_margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_with_shadow_message_box"
                    android:backgroundTint="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/img_message_close"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/shape_background_for_close_button"
                        android:gravity="center"
                        android:padding="3dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_cancel_grey" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <FontComponents.TextViewFont
                            android:id="@+id/txt_notification_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/navigation_margin_10"
                            android:text="@string/first_page_message_text_2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/intro_text_view_size_0"
                            app:customFont="@string/font_default" />

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="@dimen/navigation_margin_20"
                            android:src="@drawable/alarm" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/navigation_margin_10"
                    android:layout_marginLeft="@dimen/navigation_margin_10"
                    android:layout_marginRight="@dimen/navigation_margin_10"
                    android:background="@drawable/background_with_shadow"
                    android:orientation="vertical">

                    <FontComponents.TextViewFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/navigation_margin_10"
                        android:layout_marginTop="@dimen/navigation_margin_10"
                        android:gravity="right"
                        android:paddingLeft="@dimen/navigation_margin_10"
                        android:paddingRight="@dimen/navigation_margin_10"
                        android:text="تازه های مجله آسان فیت"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fragment_first_page_text_size_1"
                        app:customFont="@string/font_default" />

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="4dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/navigation_margin_20"
                        android:layout_marginTop="@dimen/navigation_margin_5"
                        android:background="@drawable/orange_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/navigation_margin_10"
                        android:layout_marginLeft="@dimen/navigation_margin_10"
                        android:layout_marginRight="@dimen/navigation_margin_10"
                        android:layout_marginTop="@dimen/navigation_margin_10"
                        android:background="@drawable/shape_with_shadow">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ss.com.bannerslider.views.BannerSlider
                                android:id="@+id/banner_slider1"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:background="@drawable/shape_with_shadow" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="40dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/img_dashboard_slider_arrow_left"
                                        android:layout_width="42dp"
                                        android:layout_height="42dp"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="10dp"
                                        android:src="@drawable/ic_slider_left" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />

                                    <ImageView
                                        android:id="@+id/img_dashboard_slider_arrow_right"
                                        android:layout_width="42dp"
                                        android:layout_height="42dp"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="10dp"
                                        android:src="@drawable/ic_slider_right" />

                                </LinearLayout>

                                <FontComponents.MyButton
                                    android:id="@+id/btn_dashboard_slider_taghzieh"
