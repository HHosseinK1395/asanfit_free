                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="@dimen/navigation_margin_40"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/navigation_margin_50"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/frame_down_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|center_horizontal">

                                    <com.hookedonplay.decoviewlib.DecoView
                                        android:id="@+id/circle_progress_1"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        app:dv_arc_gravity_vertical="Center"
                                        app:dv_lineWidth="5dp" />

                                    <FontComponents.TextViewFont
                                        android:id="@+id/txt_overweight_measure"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:text="0"
                                        android:textColor="@color/first_page_color_black"
                                        android:textSize="@dimen/intro_text_view_size_2"
                                        android:textStyle="bold"
                                        app:customFont="@string/font_default" />

                                </FrameLayout>

                                <FontComponents.TextViewFont
                                    android:id="@+id/txt_down_2"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/navigation_margin_5"
                                    android:background="@drawable/ic_first_page_2"
                                    android:gravity="center"
                                    android:paddingTop="3dp"
                                    android:text="شاخص توده بدنی"
                                    android:textColor="@color/white"
                                    android:textSize="9sp"
                                    app:customFont="@string/font_default" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/frame_down_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                    <com.hookedonplay.decoviewlib.DecoView
                                        android:id="@+id/circle_progress_2"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center_horizontal"
                                        app:dv_arc_gravity_vertical="Center"
                                        app:dv_lineWidth="5dp" />

                                    <FontComponents.TextViewFont
                                        android:id="@+id/txt_weightloss_measure"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:text="0"
                                        android:textColor="@color/first_page_color_black"
                                        android:textSize="@dimen/intro_text_view_size_2"
                                        android:textStyle="bold"
                                        app:customFont="@string/font_default" />

                                </FrameLayout>

                                <FontComponents.TextViewFont
                                    android:id="@+id/txt_down_1"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/navigation_margin_5"
                                    android:background="@drawable/ic_first_page_3"
                                    android:gravity="center"
                                    android:paddingTop="3dp"
                                    android:text="کاهش وزن تا کنون"
                                    android:textColor="@color/white"
                                    android:textSize="9sp"
                                    app:customFont="@string/font_default" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/frame_down_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                    <com.hookedonplay.decoviewlib.DecoView
                                        android:id="@+id/circle_progress_3"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center_horizontal"
                                        app:dv_arc_gravity_vertical="Center"
                                        app:dv_lineWidth="5dp" />

                                    <FontComponents.TextViewFont
                                        android:id="@+id/txt_bodymass_measure"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:text="0"
                                        android:textColor="@color/first_page_color_black"
                                        android:textSize="@dimen/intro_text_view_size_2"
                                        android:textStyle="bold"
                                        app:customFont="@string/font_default" />

                                </FrameLayout>

                                <FontComponents.TextViewFont
                                    android:id="@+id/txt_down_3"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/navigation_margin_5"
                                    android:background="@drawable/ic_first_page_4"
                                    android:gravity="center"
                                    android:paddingTop="3dp"
                                    android:text="میزان اضافه وزن"
                                    android:textColor="@color/white"
                                    android:textSize="9sp"
                                    app:customFont="@string/font_default" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </FrameLayout>

                <FontComponents.MyButton
                    android:id="@+id/btn_user_info_complete_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-45dp"
                    android:background="@drawable/button_2_to_11_and_14_16_17_22"
                    android:text="@string/first_page_build_yourself"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fragment_first_page_text_size_2"
                    android:textStyle="bold" />

