                                    android:layout_height="23dp"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/shape_button_2"
                                    android:text="تغذیه"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/intro_text_view_size_02" />

                                <FontComponents.TextViewFont
                                    android:id="@+id/txt_dashboard_slider_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="@dimen/navigation_margin_10"
                                    android:layout_marginTop="@dimen/navigation_margin_5"
                                    android:gravity="right"
                                    android:paddingLeft="@dimen/navigation_margin_10"
                                    android:paddingRight="@dimen/navigation_margin_10"
                                    android:text="در این مطلب با غذاهایی که ویتامین بالایی دارند آشنا شوید"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/fragment_first_page_text_size_1"
                                    android:textStyle="bold"
                                    app:customFont="@string/font_default" />

                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/navigation_margin_10"
                        android:layout_marginRight="@dimen/navigation_margin_10"
                        android:layout_marginBottom="@dimen/navigation_margin_20">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="none" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="120dp"
                                android:layout_height="120dp">

                                <ImageView
                                    android:id="@+id/img_dashboard_bottom_left"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="5dp"
                                    android:src="@drawable/slider_bk_6" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <FontComponents.MyButton
                                        android:id="@+id/btn_dashboard_bottom_left"
                                        android:layout_width="50dp"
                                        android:layout_height="20dp"
                                        android:layout_above="@id/txt_dashboard_bottom_left"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/ic_dashboard_red_button"
                                        android:text="سالاد"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/intro_text_view_size_02" />

                                    <FontComponents.TextViewFont
                                        android:id="@+id/txt_dashboard_bottom_left"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="7dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="20dp"
                                        android:lines="2"
                                        android:text="در این مطلب با غذاهایی که ویتامین بالایی دارند آشنا شوید"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/fragment_first_page_text_size_0"
                                        app:customFont="@string/font_default" />

                                </RelativeLayout>

                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="120dp"
                                android:layout_height="120dp">

                                <ImageView
                                    android:id="@+id/img_dashboard_bottom_right"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/slider_bk_6" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

