<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeef0">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:layout_marginBottom="@dimen/toolbar_height"
        android:fillViewport="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/navigation_margin_10"
                        android:layout_marginLeft="@dimen/navigation_margin_10"
                        android:layout_marginRight="@dimen/navigation_margin_10"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/background_with_shadow"
                        android:orientation="vertical"
                        android:padding="@dimen/navigation_margin_10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <FontComponents.TextViewFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/navigation_margin_20"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="داشبورد سلامتی"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fragment_first_page_text_size_2"
                                android:textStyle="bold"
                                app:customFont="@string/font_default" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:id="@+id/frame_progress_bar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/navigation_margin_20">

                                <com.hookedonplay.decoviewlib.DecoView
                                    android:id="@+id/circle_progress_weight"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/ic_main_progressbar"
                                    app:dv_arc_gravity_vertical="Center"
                                    app:dv_lineWidth="10dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <FontComponents.TextViewFont
                                        android:id="@+id/txt_weight"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_horizontal"
                                        android:text="0"
                                        android:textColor="@color/first_page_color_black"
                                        android:textSize="@dimen/intro_text_view_size_7"
                                        android:textStyle="bold"
                                        app:customFont="@string/font_default" />

                                    <FontComponents.TextViewFont
                                        android:id="@+id/txt_weight_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_horizontal"
                                        android:text="کیلو"
                                        android:layout_marginTop="-10dp"
                                        android:textColor="#949ba9"
                                        android:textSize="@dimen/intro_text_view_size_0"
                                        android:textStyle="bold"
                                        app:customFont="@string/font_default" />

                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/img_rotate"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/for_dashbord" />

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/navigation_margin_10"
                                android:layout_toLeftOf="@id/frame_progress_bar"
                                android:orientation="vertical">

                                <FontComponents.TextViewFont
                                    android:id="@+id/txt_source_weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:text="81"
                                    android:textColor="@color/first_page_color_red"
                                    android:textSize="@dimen/fragment_first_page_text_size_6"
                                    android:textStyle="bold"
                                    app:customFont="@string/font_default" />

                                <FontComponents.TextViewFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_first_page_1"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/navigation_margin_10"
                                    android:paddingRight="@dimen/navigation_margin_10"
                                    android:paddingTop="2dp"
                                    android:text="وزن اولیه"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/intro_text_view_size_02"
                                    app:customFont="@string/font_default" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/navigation_margin_10"
                                android:layout_toRightOf="@id/frame_progress_bar"
                                android:orientation="vertical">

                                <FontComponents.TextViewFont
                                    android:id="@+id/txt_destination_weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="65"
                                    android:textColor="@color/first_page_color_green"
                                    android:textSize="@dimen/intro_text_view_size_6"
                                    android:textStyle="bold"
                                    app:customFont="@string/font_default" />

                                <FontComponents.TextViewFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_first_page_1"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/navigation_margin_10"
                                    android:paddingRight="@dimen/navigation_margin_10"
                                    android:paddingTop="2dp"
                                    android:text="وزن هدف"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/intro_text_view_size_02"
                                    app:customFont="@string/font_default" />

                            </LinearLayout>

                        </RelativeLayout>


                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="25dp"
                                android:background="@drawable/ic_first_page_1"
                                android:gravity="center"
                                android:layout_gravity="center"/>

                            <FontComponents.TextViewFont
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                app:customFont="@string/font_default"
                                android:textSize="@dimen/intro_text_view_size_02"
                                android:paddingLeft="@dimen/navigation_margin_20"
                                android:paddingRight="@dimen/navigation_margin_20"
                                android:textColor="@color/black"
                                android:text="وزن فعلی"/>

                        </FrameLayout>


                        <LinearLayout
