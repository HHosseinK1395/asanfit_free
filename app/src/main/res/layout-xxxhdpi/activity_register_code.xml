<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@drawable/background_complete">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register_logo"
            android:layout_marginTop="@dimen/navigation_margin_130"
            android:layout_gravity="top|center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:focusableInTouchMode="true">

            <FontComponents.TextViewFont
                android:id="@+id/txt_register_code_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="@color/register_text_color_1"
                android:textStyle="bold"
                android:textSize="@dimen/intro_text_view_size_2"
                app:customFont="@string/font_default"
                android:gravity="center"
                android:layout_marginTop="@dimen/navigation_margin_40"
                android:text="@string/register_code_head_string"/>

            <FontComponents.MyEditText
                android:id="@+id/edt_register_code"
                android:layout_width="155dp"
                android:layout_height="37dp"
                android:layout_marginTop="@dimen/navigation_margin_20"
                android:layoutDirection="rtl"
                android:textColorHint="@color/register_text_color_3"
                android:inputType="number"
                android:hint="کد پیامک شده"
                android:gravity="center"
                android:textSize="@dimen/intro_text_view_size_1"
                android:maxLength="@integer/activity_register_code_text_length"
                android:layout_gravity="center"
                android:background="@drawable/shape_edittext"/>

            <FontComponents.MyButton
                android:id="@+id/btn_register_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_2_to_11_and_14_16_17_22"
                android:text="@string/register_code_button_text"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/fragment_first_page_text_size_2"/>

            <FontComponents.TextViewFont
                android:id="@+id/txt_register_code_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="#fe8300"
                android:textStyle="bold"
                android:textSize="@dimen/intro_text_view_size_0"
                app:customFont="@string/font_default"
                android:gravity="center"
                android:layout_marginRight="@dimen/navigation_margin_40"
                android:layout_marginLeft="@dimen/navigation_margin_40"
                android:layout_marginTop="@dimen/navigation_margin_5"
                android:text="@string/register_code_body_string"/>

            <!-- <LinearLayout
                 android:layout_width="@dimen/navigation_margin_100"
                 android:layout_height="1dp"
                 android:layout_gravity="center"
                 android:background="@color/black"
                 >
             </LinearLayout>-->

        </LinearLayout>

    </FrameLayout>

</LinearLayout>