<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lr_user_comments_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/navigation_margin_2"
            android:orientation="vertical">

            <FontComponents.TextViewFont
                android:id="@+id/txt_user_comments_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="محمدرضا عارف"
                app:customFont="@string/font_default"
                android:layout_marginBottom="@dimen/navigation_margin_5"
                android:textColor="@color/black"
                android:textSize="@dimen/fragment_first_page_text_size_2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/navigation_margin_5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_user_comment_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/dot"
                    android:layout_marginRight="@dimen/navigation_margin_5"/>

                <ImageView
                    android:id="@+id/img_user_comment_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/dot"
                    android:layout_marginRight="@dimen/navigation_margin_5"/>

                <ImageView
                    android:id="@+id/img_user_comment_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/dot"
                    android:layout_marginRight="@dimen/navigation_margin_5"/>

                <ImageView
                    android:id="@+id/img_user_comment_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/dot"
                    android:layout_marginRight="@dimen/navigation_margin_5"/>

                <ImageView
                    android:id="@+id/img_user_comment_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/dot"/>

            </LinearLayout>

            <FontComponents.TextViewFont
                android:id="@+id/txt_user_comments_list_item_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تست تست تست تست تست تست تست تست تست تست تست تست تست تست "
                app:customFont="@string/font_default"
                android:layout_marginBottom="@dimen/navigation_margin_5"
                android:layout_marginLeft="@dimen/navigation_margin_10"
                android:textColor="@color/black"
                android:textSize="@dimen/fragment_first_page_text_size_1"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user_comment_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_moshaver_test"
                app:civ_border_width="2dp"
                android:layout_marginRight="@dimen/navigation_margin_25"
                android:layout_marginLeft="@dimen/navigation_margin_20"
                app:civ_border_color="@color/black"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="@dimen/navigation_margin_10"
        android:layout_marginRight="@dimen/navigation_margin_30"
        android:layout_marginLeft="@dimen/navigation_margin_20"
        android:background="@color/divider_underline_color"/>

</LinearLayout>